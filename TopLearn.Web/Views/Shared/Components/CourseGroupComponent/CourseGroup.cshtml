@model IEnumerable<CourseGroup>

<div class="main-menu">
    <div class="container">
        <nav>
            <span class="responsive-sign"><i class="zmdi zmdi-menu"></i></span>
            <ul>
                @foreach (CourseGroup group in Model.Where(g => g.ParentId == null))
                {
                    <li>
                        <a href="/courses?selectedGroups=@group.Id"> @group.Title </a>
                        @if (Model.Any(g => g.ParentId == group.Id))
                        {
                            <ul>
                            @foreach (CourseGroup subGroup in Model.Where(sg => sg.ParentId == group.Id))
                            {
                                <li><a href="/courses?selectedGroups=@subGroup.Id"> @subGroup.Title </a></li>
                            }
                            </ul>
                        }
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>