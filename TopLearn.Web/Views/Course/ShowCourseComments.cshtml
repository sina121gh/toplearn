@model CourseCommentsViewModel
@{
    Layout = null;
}

@foreach (CourseComment comment in Model.Comments)
{
    <div class="comment-row">
        <img src="/UsersAvatars/@comment.User.Avatar">
        <div class="left-col">
            <h3> @comment.User.UserName </h3>
            <span>@comment.CreateDate.ToShamsi()</span>
            <p>
                @comment.Comment
            </p>
        </div>
    </div>
}

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
            <a onclick="changePage(@(Model.CurrentPage - 1))" class="page-link" aria-label="Previous">
                <span aria-hidden="true"><i class="zmdi zmdi-chevron-right"></i></span>
            </a>
        </li>
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            <li class="page-item"><a onclick="changePage(@i)" class="page-link">@i</a></li>
        }
        <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
            <a onclick="changePage(@(Model.CurrentPage + 1))" class="page-link" aria-label="Next">
                <span aria-hidden="true"><i class="zmdi zmdi-chevron-left"></i></span>
            </a>
        </li>
    </ul>
</nav>