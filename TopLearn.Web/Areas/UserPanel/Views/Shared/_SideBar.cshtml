@inject IUserService _userSrvice
@inject IPermisionService _permissionService;
@{
    UserPanelSideBarViewModel userSideBar = _userSrvice.GetUserPanelSideBar(User.Identity.Name);
}

<div class="col-md-3 col-sm-4 col-xs-12">
    <aside>

        <div class="avatar-layer">
            <div class="img-layer">
                <a href="" class="change-image"><i class="zmdi zmdi-edit"></i></a>
                <img src="/UsersAvatars/@userSideBar.PitcureName">
            </div>
            <div class="detail">
                <span> @userSideBar.UserName </span>
                <span> عضویت : @userSideBar.RegisterDate.ToShamsi() </span>
            </div>
        </div>

        <section>
            <header><h3> میز کار </h3></header>
            <div class="inner">
                <ul>
                    <li><a href="/user-panel"> مشاهده حساب کابری </a></li>
                    <li><a href="/user-panel/edit-profile"> ویرایش حساب کابری </a></li>
                    <li><a href="/user-panel/change-password"> تغییر رمز عبور </a></li>
                    <li><a href="/user-panel/transactions"> تراکنش ها </a></li>
                    <li><a href="/user-panel/charge-wallet"> شارژ کیف پول </a></li>
                    <li><a href="/user-panel/my-orders"> فاکتور ها </a></li>
                    <li><a href=""> تنظیمات حساب کاربری </a></li>
                    <li><a href="/Logout"> خروج از حساب کاربری </a></li>
                </ul>
            </div>
        </section>

        @if (_permissionService.HasUserThisPermission(14, User.Identity.Name))
        {
            <section>
                <header><h3> پنل مدرس </h3></header>
                <div class="inner">
                    <ul>
                        <li><a href="/master-courses"> مدیریت دوره ها </a></li>
                    </ul>
                </div>
            </section>
        }
        
    </aside>
</div>