@model IEnumerable<Order>
@{
    ViewData["Title"] = "فاکتورهای من";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page"> نمایش فاکتور ها </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">

                <partial name="_SideBar"></partial>
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> فاکتورهای شما </h1></header>
                        @if (ViewBag.IsFinally == true)
                        {

                        }
                        <div class="inner">
                            <div class="account-information">
                                <h3> لیست فاکتور ها </h3>
                                <table class="table table-bordered table-hover table-responsive">
                                    <thead>
                                        <tr>
                                            <th>شماره فاکتور</th>
                                            <th>تاریخ</th>
                                            <th>جمع</th>
                                            <th>وضعیت پرداخت</th>
                                            <th>دستورات</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (Order order in Model)
                                        {
                                            <tr>
                                                <td>@order.Id</td>
                                                <td>@order.CreateDate.ToShamsi()</td>
                                                <td>@(order.TotalPrice.ToString("#,0")) تومان</td>
                                                <td>
                                                    <span class="btn-sm @(order.IsFinally ? "btn-success" : "btn-warning")">
                                                        @(order.IsFinally ? "پرداخت شده" : "پرداخت نشده")
                                                    </span>
                                                </td>
                                                <td>
                                                    <a class="btn btn-info" href="/user-panel/my-orders/@order.Id">
                                                        نمایش جزئیات
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>
